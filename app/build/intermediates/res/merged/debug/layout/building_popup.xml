    <TextView
        android:id="@+id/color_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="3dp"
        android:textSize="20sp"
        android:text="Color"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/black_shape"
        />
    <TextView
        android:id="@+id/building_red_number"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="left|top"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/red_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/building_green_number"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="center|top"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/green_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/building_blue_number"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="right|top"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/blue_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/difference"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="63dp"
        android:textSize="20sp"
        android:text="Difference"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/black_shape"
        />
    <TextView
        android:id="@+id/building_red_dif"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"

        android:layout_gravity="left"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/red_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/building_green_dif"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/green_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/building_blue_dif"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="right"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/blue_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />
