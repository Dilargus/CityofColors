    <TextView
        android:id="@+id/building_title"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="3dp"
        android:textSize="20sp"
        android:text="Building Properties"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:background="@drawable/black_shape"
        />

    <TextView
        android:id="@+id/color_title"
        android:layout_width="96dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:textSize="15sp"
        android:text="Color"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/black_shape"
        />
    <TextView
        android:id="@+id/corners_title"
        android:layout_width="96dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="3dp"
        android:textSize="15sp"
        android:text="Corners"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/black_shape"
        />
    <TextView
        android:id="@+id/building_corners"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="135dp"
        android:layout_marginRight="3dp"
        android:textColor="#ffffff"
        android:text="00"
        android:background="@drawable/black_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/area_title"
        android:layout_width="96dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="201dp"
        android:layout_marginRight="3dp"
        android:textSize="15sp"
        android:text="Area"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/black_shape"
        />
    <TextView
        android:id="@+id/cost_title"
        android:layout_width="96dp"
        android:layout_height="25dp"
        android:layout_marginTop="106dp"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="3dp"
        android:textSize="15sp"
        android:text="Cost:"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/black_shape"
        />
    <TextView
        android:id="@+id/building_star_cost"
        android:layout_marginTop="94dp"
        android:layout_marginLeft="224dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/star_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/building_area"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="234dp"
        android:layout_marginRight="3dp"
        android:textColor="#ffffff"
        android:text="00"
        android:background="@drawable/black_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/building_red_number"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/red_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/building_green_number"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/green_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/building_blue_number"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="69dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/blue_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/difference"
        android:layout_width="96dp"
        android:layout_height="25dp"
        android:layout_marginTop="91dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:textSize="15sp"
        android:text="Difference"
        android:textColor="#ffffff"
        android:background="@drawable/black_shape"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/building_red_dif"
        android:layout_marginTop="119dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"

        android:layout_gravity="left"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/red_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/building_green_dif"
        android:layout_marginTop="119dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/green_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/building_blue_dif"
        android:layout_marginTop="119dp"
        android:layout_marginLeft="69dp"
        android:layout_marginRight="3dp"
        android:textColor="#000000"
        android:text="00"
        android:background="@drawable/blue_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />
